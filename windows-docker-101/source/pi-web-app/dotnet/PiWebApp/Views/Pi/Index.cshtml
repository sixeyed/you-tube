@model PiWebApp.Models.PiModel

<div class="container">
  <div class="row">
      <div class="col-md-2">
        <img src="~/img/pi-large.png" alt="Pi" height="35%" width="35%"/>
        </div>
        <div class="col-md-3">
    <h3>To: @Model.DecimalPlaces.ToString("N0") d.p.</h3>
    </div>
    <div class="col-md-5">
    <h3>Calculation took: @Model.ComputeMilliseconds.ToString("N0") ms.</h3>
    </div>
  </div>
  <div class="row">            
    <pre>@Model.Value</pre>        
</div>